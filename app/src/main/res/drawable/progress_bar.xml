<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="500"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1440">

    <shape
        android:innerRadius="10dp"
        android:shape="ring"
        android:thickness="6dp"
        android:useLevel="false">
        <size
            android:width="100dp"
            android:height="100dp" />

        <gradient
            android:centerColor="@color/loading_center"
            android:centerY="0.5"
            android:endColor="@color/loading_end"
            android:startColor="@color/loading_start"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>